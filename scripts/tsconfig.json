{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["../node_modules/@types", "./scripts"]
  },
  "include": [
    "**/*.ts",
    "globals.d.ts",
    "../src/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  }
}

